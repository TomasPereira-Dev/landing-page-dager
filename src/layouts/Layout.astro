---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource/jost/400.css";
import "@fontsource/jost/600.css";
import "@fontsource/jost/700.css";
import "@fontsource/jost/700-italic.css";

const { title } = Astro.props;
---

<!doctype html>
<html class="scroll-smooth" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/Blob.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="max-w-screen-xl mx-auto bg-bg1 overflow-x-hidden ">
		<Header />
		<slot />
		<Footer />
	</body>
	<script src="https://kit.fontawesome.com/33949f79d9.js" crossorigin="anonymous"></script>
</html>